@model IEnumerable<KrishnaAPI.Models.DataClass>
@{
    ViewBag.Title = "Index";
}

@Html.ActionLink("Create", "CreateItem")

@if (Model.Count() > 0)
{
    <table cellspacing="2" border="1">
        <thead>
            <tr>
                <th>Id</th>
                <th>Application Id</th>
                <th>Type</th>
                <th>Summary</th>
                <th>Amount</th>
                <th>PostingDate</th>
                <th>IsCleared</th>
                <th>ClearedDate</th>
                <th>action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var data in Model)
            {
                <tr>
                    <td>@data.Id</td>
                    <td>@data.ApplicationId</td>
                    <td>@data.Type</td>
                    <td>@data.Summary</td>
                    <td>@data.Amount</td>
                    <td>@data.PostingDate</td>
                    <td>@data.IsCleared</td>
                    <td>@data.ClearedDate</td>
                    <td>@Html.ActionLink("Delete", "Delete", new { id = data.Id })</td>
                </tr>
            }

        </tbody>
    </table>
}

